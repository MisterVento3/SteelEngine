    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "WindowsCompiler",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/WindowsCompiler.exe",
            "args": ["cl", "/c", "src/Module/Module.cpp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "ReflectionGenerator_Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ReflectionGenerator.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "EngineServer_Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Engine.exe",
            "args": ["server"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
