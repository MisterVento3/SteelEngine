{
	"type": "external_lib_config",
	"out_type": "lib",
	"name": "imgui",
	"compiler": {
		"flags": [
			"O2",
			"ZI",
			"DEBUG:FASTLINK",
			"std:c++17"
		],
		"definitions": [
			"IMGUI_IMPL_OPENGL_LOADER_GLEW"
		],
		"includes": [
			"$CWD$/external/imgui",
			"$CWD$/external/SDL2-2.0.9/include",
			"$CWD$/external/glew-2.1.0/include",
			"$CWD$/external/Vulkan/Include"
		],
		"lib_paths": [
			"$CWD$/external/Vulkan/Lib"
		],
		"libs": [
			"vulkan-1.lib"
		],
		"groups": [
			{
				"name": "MAIN",
				"src_files": [
					"imgui.cpp",
					"examples/imgui_impl_opengl3.cpp",
					"examples/imgui_impl_sdl.cpp",
					"examples/imgui_impl_vulkan.cpp",
					"imgui_widgets.cpp",
					"imgui_draw.cpp"
				]
			}
		]
	}
}